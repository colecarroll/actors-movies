<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Movies</title>
  </head>
  <body>
    {{#each directorData}}
    <h1>{{title}}</h1>
    <h2>{{name}}</h2>
    {{/each}}

    <h3>Add a Movie:</h3>
    <form action="/directors/new" method="post">
      <label for="title">Movie Title</label>
      <input type="text" name="title" value="">
    
      <label for='name'>Director Name</lable>
      <input type="text" name="name" value="">
      <label for="role">Role</label>
      <input type='hidden' name='role' value='director'>
      <button type="submit">Submit</button>
    </form>
  </body>
</html>
