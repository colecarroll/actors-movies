<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Movies</title>
  </head>
  <body>
    {{#each movieData}}
    <h1>{{title}}</h1>
    {{/each}}

    <h3>Add a Movie:</h3>
    <form action="/movies/new" method="post">
      <label for="title">Movie Title</label>
      <input type="text" name="title" value="">
      <label for="directorName">Director Name</label>
      <input type="text" name="directorName" value="">
      <input type="hidden" name="role" value="director">
      <label for="actorName">Actor Name</label>
      <input type="text" name="actorName" value="">
      <input type="hidden" name="role2" value="actor">
      <button type="submit">Submit</button>
    </form>
  </body>
</html>
